<?xml version="1.0" encoding="UTF-8" ?>
<configure>
    <!--日志-->
    <log>
        <file>conf/log.xml</file>
    </log>
    <!--gin http服务信息-->
    <gin>
        <!--指定host,只能通过host访问,不指定host,通过部署主机的任意ip地址都可以访问-->        
        <host></host>
        <port>9000</port>
    </gin>
    <!--c++实施提取图片特征信息-->        
    <feature>
        <host>localhost</host>
        <port>9001</port>
    </feature>
    <!--nginx,通过nginx-gridfs获取图片-->        
    <nginx>
        <host>localhost</host>
        <host_inter>http://www.gorgzn.cn</host_inter>
        <port>80</port>
        <router>image</router>
    </nginx>
    <!--mongo信息-->        
    <mongo>
        <hosts>localhost:27017</hosts>
         <!--用户-->
        <user>
            <db>user</db>
            <collection>user</collection>
        </user>
        <!--相册-->
        <album>
            <db>album</db>
            <collection>album</collection>
        </album>
        <!--图片库-->
        <image>
            <db>image</db>
        </image>
        <!--图片信息,包含特征值-->        
        <imageinfo>
            <db>imageinfo</db>
            <collection>imageinfo</collection>
        </imageinfo>
    </mongo>
</configure>